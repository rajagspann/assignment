##automation script for git push

git config --global user.email "rajak.dop@gmail.com"
git config --global user.name "rajagspann"
git add .
mess = $(pwd|awk -F / '{print $NF}')
git commit -m "Updating $mess"
git push origin main
if [ -n "$1" ]; then
         git tag -a $1 -m $1
         git push origin $1
fi
